	<DataDef xsi:type="BuildingBlueprint">
		<nameDef>scrap_box_blueprint</nameDef>
		<productRef>scrap_box</productRef>
		<requiredMaterials>
			<MaterialDef>
				<nameRef>scrap_pile</nameRef>
				<amount>1</amount>
			</MaterialDef>
		</requiredMaterials>
		<listPriority>1</listPriority>
		<category>scrap_tech</category>
		<displayName>Scrap Box</displayName>
		<description>A box filled with "useful" junk!</description>
		<iconSpriteName>Icon_Build_Chest</iconSpriteName>
