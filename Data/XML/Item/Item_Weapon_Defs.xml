<?xml version='1.0' encoding="UTF-8"?>
<Defs xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <DataDef xsi:type="ItemData">
		<nameDef>nail_gun</nameDef>
		<displayName>Nail Gun</displayName>
		<info>Crappy gun.</info>
		<height>2</height>
		<width>4</width>
		<maxStackSize>1</maxStackSize>
        <components>
            <ItemComponentData xsi:type="WeaponItemComponentData">
                <mesh>Meshes/MeshBank/Weapons/Pistol/Pistol_Body</mesh>
                <material>Materials/New_Materials/WeaponMaterials/M_Pistol_Body_Scrap</material>
                <ammoRef>bullet_small</ammoRef>
                <stockpileResourceRef>nails</stockpileResourceRef>
                <isAutomatic>false</isAutomatic>
                <roundsPerMin>500</roundsPerMin>
                <damage>40</damage>
                <damageTypeRef>projectile</damageTypeRef>
                <reloadTimeInSeconds>2</reloadTimeInSeconds>
                <shootRange>40</shootRange>
                <soundRange>10</soundRange>
                <accuracyInDegrees>20</accuracyInDegrees>
                <pelletsPerShot>1</pelletsPerShot>
                <ammoClipSize>20</ammoClipSize>
                <baseAmmoCount>50</baseAmmoCount>
                <ammoPerUpgrade>50</ammoPerUpgrade>
                <ammoUpgradeBaseCost>1</ammoUpgradeBaseCost>
                <ammoUpgradeCostIncrement>1</ammoUpgradeCostIncrement>
                <ammoUpgradeCostIncrementInterval>2</ammoUpgradeCostIncrementInterval>
                <ShootBehaviour xsi:type="RaycastShoot">
                    <effectRef>effect_explosion</effectRef>
                </ShootBehaviour>
                <ShootSound>Nail_Fire</ShootSound>
                <ReloadSound>Pistol_Reload</ReloadSound>
                <stockpileResourceCost>0</stockpileResourceCost>
            </ItemComponentData>
        </components>
	</DataDef>

