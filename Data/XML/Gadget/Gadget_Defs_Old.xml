<?xml version='1.0' encoding="UTF-8"?>
<Defs xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <DataDef xsi:type="GadgetData">
        <nameDef>nail_mine</nameDef>
        <displayName>Nail Mines</displayName>
		<stockpileResourceRef>nails</stockpileResourceRef>
        <baseCost>3</baseCost>
        <baseUsesCount>5</baseUsesCount>
        <costPerUseUpgrade>1</costPerUseUpgrade>
        <usesPerUpgrade>5</usesPerUpgrade>
        <GadgetBehaviour xsi:type="PlaceTileObject">
			<tileObjectRef>nail_mine</tileObjectRef>
		</GadgetBehaviour>
        <gadgetIconSpriteName>Gadget_Icon_Nail_Mine</gadgetIconSpriteName>
        <description>
            Nail mines are placed on empty ground beneath the player when used.
            The mines explode on contact with any entity, dealing damage in an area around it.
        </description>
    </DataDef>

    <DataDef xsi:type="GadgetData">
        <nameDef>nail_ammo_box</nameDef>
        <displayName>Nail Ammo Box</displayName>
		<stockpileResourceRef>nails</stockpileResourceRef>
        <baseCost>5</baseCost>
        <baseUsesCount>1</baseUsesCount>
        <costPerUseUpgrade>3</costPerUseUpgrade>
        <usesPerUpgrade>1</usesPerUpgrade>
        <GadgetBehaviour xsi:type="PlaceTileObject">
			<tileObjectRef>nail_ammo_box</tileObjectRef>
		</GadgetBehaviour>
        <gadgetIconSpriteName>Gadget_Icon_Nail_Ammo_Box</gadgetIconSpriteName>
        <description>
            The nail ammo box can be placed beneath the user on empty ground.
            The box allows all friendly players to resupply any nail based weapon with 100 nails.
            The box is destroyed after 5 uses.
        </description>
    </DataDef>

    <DataDef xsi:type="GadgetData">
        <nameDef>bfnl</nameDef>
        <displayName>The BFNL</displayName>
		<stockpileResourceRef>nails</stockpileResourceRef>
        <baseCost>3</baseCost>
        <baseUsesCount>1</baseUsesCount>
        <costPerUseUpgrade>1</costPerUseUpgrade>
        <usesPerUpgrade>1</usesPerUpgrade>
        <GadgetBehaviour xsi:type="GadgetRaycastShootBehaviour">
            <applyEffectRef>effect_bfnl</applyEffectRef>
            <projectileWidthMultiplier>2</projectileWidthMultiplier>
			<shootRange>8</shootRange>
            <damage>500</damage>
		</GadgetBehaviour>
        <gadgetIconSpriteName>Gadget_Icon_BFNL</gadgetIconSpriteName>
        <description>
            The BFNL fires a huge nail harpoon towards the players aim direction.
            The Harpoon deals 500 damage to everything it touches.
        </description>
    </DataDef>

    <DataDef xsi:type="GadgetData">
        <nameDef>nail_ring_burst</nameDef>
        <displayName>Porcupine Burst</displayName>
		<stockpileResourceRef>nails</stockpileResourceRef>
        <baseCost>3</baseCost>
        <baseUsesCount>1</baseUsesCount>
        <costPerUseUpgrade>1</costPerUseUpgrade>
        <usesPerUpgrade>1</usesPerUpgrade>
        <GadgetBehaviour xsi:type="GadgetPlayEffectBehaviour">
            <effectRef>nail_ring_burst</effectRef>
		</GadgetBehaviour>
        <gadgetIconSpriteName>Gadget_Icon_Porcupine_Burst</gadgetIconSpriteName>
        <description>
            Causes an explosion of nails to erupt from the user which damage nearby enemies.
        </description>
    </DataDef>

